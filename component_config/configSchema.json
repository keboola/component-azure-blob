{
  "type": "object",
  "title": "Parameters",
  "required": [
    "account_name",
    "container_name",
    "destination_path",
    "append_date_to_file",
    "stage_and_commit"
  ],
  "properties": {
    "auth_type": {
      "type": "string",
      "title": "Authorization type",
      "propertyOrder": 1,
      "enum": [
        "Azure Credentials",
        "Workspace Credentials"
      ],
      "default": "Azure Credentials"
    },
    "account_name": {
      "description": "Azure Storage Resources Account Name",
      "type": "string",
      "title": "Account Name",
      "minLength": 1,
      "propertyOrder": 10
    },
    "#account_key": {
      "type": "string",
      "description": "Azure Storage Resources Account Key or SAS Token",
      "title": "Account Key / SAS Token",
      "format": "password",
      "default": "",
      "propertyOrder": 20,
      "options": {
        "dependencies": {
          "auth_type": "Azure Credentials"
        }
      }
    },
    "workspace_id": {
      "type": "string",
      "title": "Workspace ID",
      "description": "ID of the persistent workspace.",
      "propertyOrder": 22,
      "options": {
        "dependencies": {
          "auth_type": "Workspace Credentials"
        }
      }
    },
    "#storage_token": {
      "type": "string",
      "format": "password",
      "title": "Storage Token (Workspace)",
      "description": "Storage token to refresh the Workspace SAS key.",
      "propertyOrder": 25,
      "options": {
        "dependencies": {
          "auth_type": "Workspace Credentials"
        }
      }
    },
    "container_name": {
      "type": "string",
      "title": "Container Name",
      "description": "Azure Storage Container Name",
      "minLength": 1,
      "propertyOrder": 40
    },
    "destination_path": {
      "type": "string",
      "title": "Destination Path",
      "description": "The folder path you want to export the files to. Please refer to component description on how to configure",
      "propertyOrder": 50
    },
    "append_date_to_file": {
      "type": "boolean",
      "title": "Append Date to File",
      "format": "checkbox",
      "description": "Today's date (YYYY_MM_dd) will be appended into the export file",
      "propertyOrder": 60,
      "default": false
    },
    "stage_and_commit": {
      "type": "boolean",
      "title": "Upload via blocks staging and subsequent commit",
      "format": "checkbox",
      "description": "Staging nad commiting ensures the whole file will be uploaded before visible in azure",
      "propertyOrder": 70,
      "default": false
    },
    "block_size": {
      "type": "integer",
      "default": 4194304,
      "title": "Block Size",
      "description": "Block size for staging (default 4 * 1024 * 1024 B ~ 4 MB)",
      "propertyOrder": 80,
      "options": {
        "dependencies": {
          "stage_and_commit": true
        }
      }
    }
  }
}